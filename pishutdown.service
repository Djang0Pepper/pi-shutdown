[Service]
ExecStart=/usr/bin/python3 ~/Python/pi-shutdown/pishutdown.py
WorkingDirectory= ~/Python/pi-shutdown/
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=pishutdown
User=root
Group=root

[Install]
WantedBy=multi-user.target

